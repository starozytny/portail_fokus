{% extends 'layout/layout_admin.html.twig' %}

{% set page_prefix = "Administrateur" %}

{% set menuFokus = [
    {
        name: "Sociétés", icon: "bank",
        path: path('admin_administration_clients_index'),
        matchRoute: ['admin_administration_clients_index']
    },
    {
        name: "Utilisateurs", icon: "group",
        path: path('admin_fokus_users_index'),
        matchRoute: ['admin_fokus_users_index']
    },
    {
        name: "Biens", icon: "home",
        path: path('admin_fokus_properties_index'),
        matchRoute: ['admin_fokus_properties_index', 'admin_fokus_properties_list']
    },
    {
        name: "États des lieux", icon: "receipt",
        path: path('admin_fokus_inventories_index'),
        matchRoute: ['admin_fokus_inventories_index', 'admin_fokus_inventories_list']
    },
] %}

{% set menu = [
    {
        name: "Dashboard", icon: "home",
        path: path('admin_homepage'),
        matchRoute: ['admin_homepage']
    },
    {
        name: "Sociétés", icon: "bank",
        path: path('admin_societies_index'),
        matchRoute: ['admin_societies_index', 'admin_societies_create', 'admin_societies_update', 'admin_societies_read']
    },
    {
        name: "Utilisateurs", icon: "group",
        path: path('admin_users_index'),
        matchRoute: ['admin_users_index', 'admin_users_create', 'admin_users_update', 'admin_users_read', 'admin_users_password']
    },
    {
        name: "Changelogs", icon: "refresh1",
        path: path('admin_changelogs_index'),
        matchRoute: ['admin_changelogs_index', 'admin_changelogs_create', 'admin_changelogs_update']
    },
    {
        name: "Contacts", icon: "chat",
        path: path('admin_contacts_index'),
        matchRoute: ['admin_contacts_index']
    },
    {
        name: "Stockage", icon: "box",
        path: path('admin_storage_index'),
        matchRoute: ['admin_storage_index',]
    },
    {
        name: "Boite d'envois", icon: "email",
        path: path('admin_mails_index', {'type': 'envoyes'}),
        matchRoute: ['admin_mails_index',]
    }
] %}

{% set menu_bottom = [
    {
        name: "Page accueil",  icon: "earth",
        path: path('app_homepage'),
        matchRoute: ['app_homepage']
    },
] %}

{% block footer %}
    <div class="bg-black/90 px-4 py-8 text-sm sm:px-6 lg:px-8">
        <div class="mx-auto max-w-screen-2xl pt-4 flex flex-col text-center lg:flex-row lg:text-left gap-2 justify-center">
            <p class="text-gray-300">&copy; 2021 - <a href="https://logilink.fr" class="text-blue-600">Logilink.fr</a></p>
            <span class="text-gray-300">-</span>
            <a class="text-gray-300 hover:text-white" href="{{ path('app_mentions') }}">Mentions légales</a>
            <a class="text-gray-300 hover:text-white" href="{{ path('app_politique') }}">Politique de confidentialité</a>
            <a class="text-gray-300 hover:text-white" href="{{ path('app_cookies') }}">Gestion des cookies</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="text-gray-300 hover:text-white" href="{{ path('admin_homepage') }}">Espace administrateur</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
